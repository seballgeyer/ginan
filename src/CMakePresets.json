{
    "version": 8,
    "configurePresets": [
        {
            "name": "Custom configure preset",
            "displayName": "Custom configure preset",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "linux-debug-vcpkg",
            "displayName": "Linux Debug (vcpkg dynamic)",
            "description": "Debug build using vcpkg dynamic libraries",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "/usr/local/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-linux",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/..",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/../vcpkg_installed",
                "EXECUTABLE_SUFFIX": "_linux_debug"
            }
        },
        {
            "name": "linux-release-vcpkg",
            "displayName": "Linux Release (vcpkg dynamic)",
            "description": "Release build using vcpkg dynamic libraries",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "/usr/local/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-linux-dynamic",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/..",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/../vcpkg_installed",
                "EXECUTABLE_SUFFIX": "_linux_dynamic"
            }
        },
        {
            "name": "linux-static-vcpkg",
            "displayName": "Linux Static (vcpkg static)",
            "description": "Static build using vcpkg static libraries",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "/usr/local/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-linux",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/..",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/../vcpkg_installed",
                "EXECUTABLE_SUFFIX": "_linux_static"
            }
        },
        {
            "name": "windows-mingw-vcpkg",
            "displayName": "Windows MinGW Cross-compile",
            "description": "Cross-compile for Windows using MinGW",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "/usr/local/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-mingw-static",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/..",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/../vcpkg_installed",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "/usr/local/share/cmake-windows.cmake",
                "EXECUTABLE_SUFFIX": "_windows"
            }
        },
        {
            "name": "macos-arm64-vcpkg",
            "displayName": "macOS ARM64 Cross-compile",
            "description": "Cross-compile for macOS Apple Silicon (M1/M2/M3)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "/usr/local/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "arm64-osx",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/..",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/../vcpkg_installed",
                "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0",
                "CMAKE_SYSTEM_NAME": "Darwin",
                "CMAKE_SYSTEM_PROCESSOR": "arm64",
                "EXECUTABLE_SUFFIX": "_macos_arm64"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "macos-x64-vcpkg",
            "displayName": "macOS Intel x64 Cross-compile",
            "description": "Cross-compile for macOS Intel x86_64",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "/usr/local/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-osx",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/..",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/../vcpkg_installed",
                "CMAKE_OSX_DEPLOYMENT_TARGET": "10.15",
                "CMAKE_SYSTEM_NAME": "Darwin",
                "CMAKE_SYSTEM_PROCESSOR": "x86_64",
                "EXECUTABLE_SUFFIX": "_macos_x64"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "windows-debug-vcpkg",
            "displayName": "Windows Debug (MSVC)",
            "description": "Debug build using MSVC and vcpkg",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/..",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/../vcpkg_installed",
                "EXECUTABLE_SUFFIX": "_windows_debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-release-vcpkg",
            "displayName": "Windows Release (MSVC)",
            "description": "Release build using MSVC and vcpkg",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/..",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/../vcpkg_installed",
                "EXECUTABLE_SUFFIX": "_windows"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-debug-vcpkg",
            "configurePreset": "linux-debug-vcpkg"
        },
        {
            "name": "linux-release-vcpkg",
            "configurePreset": "linux-release-vcpkg"
        },
        {
            "name": "linux-static-vcpkg",
            "configurePreset": "linux-static-vcpkg"
        },
        {
            "name": "windows-mingw-vcpkg",
            "configurePreset": "windows-mingw-vcpkg"
        },
        {
            "name": "macos-arm64-vcpkg",
            "configurePreset": "macos-arm64-vcpkg"
        },
        {
            "name": "macos-x64-vcpkg",
            "configurePreset": "macos-x64-vcpkg"
        },
        {
            "name": "windows-debug-vcpkg",
            "configurePreset": "windows-debug-vcpkg"
        },
        {
            "name": "windows-release-vcpkg",
            "configurePreset": "windows-release-vcpkg"
        }
    ]
}